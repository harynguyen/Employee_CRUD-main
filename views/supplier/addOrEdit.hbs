<h3>{{viewTitle}}</h3>
<form action="/supplier" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{supplier._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" value="{{supplier.name}}" placeholder=" Name">
        <div class="text-danger">
            {{supplier.nameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input type="text" class="form-control" name="phone" value="{{supplier.phone}}" placeholder="Email">
        <div class="text-danger">
            {{supplier.phoneError}}
        </div>
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" value="{{supplier.address}}" placeholder="Address">
        <div class="text-danger">
            {{supplier.addressError}}
        </div>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" name="description" value="{{supplier.description}}"
            placeholder="Description">
        <div class="text-danger">
            {{supplier.DescriptionError}}
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a href="/supplier/list" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
</form>