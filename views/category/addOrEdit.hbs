<h3>{{viewTitle}}</h3>
<form action="/category" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{category._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" value="{{category.name}}" placeholder=" Name of category">
        <div class="text-danger">
            {{category.nameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" name="description" value="{{category.description}}" placeholder="Description">
        <div class="text-danger">
            {{category.descriptionError}}
        </div>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a href="/category/list" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
</form>